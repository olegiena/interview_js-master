{
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "env": {
    "browser": true,
    "node": false,
    "es6": true
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "ecmaFeatures": {
      "jsx": true,
      "experimentalObjectRestSpread": true
    },
    "sourceType": "module"
  },
  "rules": {
    "strict": 2,
    "quotes": [2, "single"],
    "max-len": [2, 120],
    "indent": ["off", 4],
    "no-unreachable": 0,
    "no-console": "off",
    "no-undef": 0,
    "no-constant-condition": "off",
    "arrow-body-style": 0,
    "space-before-function-paren": 0,
    "no-spaced-func": 0,
    "no-unused-vars": 2,
    "block-scoped-var": 2,
    "no-await-in-loop": 1,
    "semi": [2, "always"],
    "react/no-unescaped-entities": "off"
  }
}
